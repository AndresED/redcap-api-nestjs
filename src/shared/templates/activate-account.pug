doctype html
head
  meta(charset='utf-8')
  title Confirm your account
  style.
    /* CSS Document */
    body{
    width: 700px;
    margin: 10px auto;
    border: 1px solid rgba(185,185,185,1.00);
    }
    .cabecera h1{
    margin: 0 auto;
    text-align: center;
    padding: 70px 0px 50px 0px;
    }
    .contenedor{
    background-color: #E4FCF6;
    padding: 50px 50px 50px 50px;
    border-radius: 50px;
    }
    .texto{
    padding: 0px 35px 0px 35px;
    margin-top: 0px;
    }
    .titulo{
    margin: 0px;
    font-family: Segoe, "Segoe UI", "DejaVu Sans", "Trebuchet MS", Verdana, "sans-serif";
    font-weight: bold;
    font-size: 50px;
    color: #0F0F0F;
    text-align: center;
    }
    .parrafo{
    margin-top: 20px;
    letter-spacing: 0.2px;
    word-spacing: 0.2em;
    font-family: Segoe, "Segoe UI", "DejaVu Sans", "Trebuchet MS", Verdana, "sans-serif";
    font-weight: normal;
    text-align: justify;
    font-size: 16px;
    line-height: 26px;
    }
    .botones{
    display: flex;
    text-align: center;
    margin: 0px;
    padding: 0px 150px 0px 150px;
    margin: 30px 0px 0px 0px;
    }
    .botones a{
    margin: 0 auto;
    }
    .accept{
    background-image: url("https://i.imgur.com/1XD2f0D.png");
    width: 135px;
    height: 35px;
    }
    .redes {
    display: flex;
    list-style: none;
    padding: 100px 170px 20px 170px;
    }
    .redes a{
    list-style: none;
    margin: auto;
    padding: 0px;
    }
    .enlaces {
    text-align: center;
    margin: 0px;
    padding-bottom: 50px;
    }
    .enlaces a{
    text-decoration: none;
    font-family: Segoe, "Segoe UI", "DejaVu Sans", "Trebuchet MS", Verdana, "sans-serif";
    font-weight: bold;
    font-size: 16px;
    color: #0B81F7;
    line-height: 28px;
    }
// header
header.cabecera
  h1
    img(src='https://i.imgur.com/EDnrZ2X.png' alt='')
// cuerpo de texto
section.texto
  .contenedor
    // logo
    h1.titulo Confirm your account
    // parrafo
    p.parrafo
      | Hey #{name}, 
      br
      | &#x9;&#x9;&#x9;&#x9;Welcome to MUSA! Please click the link below to validate your account and continue to create your profile.
    // botones
    .botones
      a.accept(href=`${url}`)
// iconos redes
.redes
  a(title='mail' href='http://www.lostejos.com')
    img(src='https://i.imgur.com/2ltmi3F.png' alt='boton1')
  a(title='facebook' href='http://www.lostejos.com')
    img(src='https://i.imgur.com/B0OevMK.png' alt='boton2')
  a(title='instagram' href='http://www.lostejos.com')
    img(src='https://i.imgur.com/LOmySr3.png' alt='boton1')
  a(title='twitter' href='http://www.lostejos.com')
    img(src='https://i.imgur.com/yGcDKvJ.png' alt='boton2')
// datos
section.enlaces
  a.website(href='https://www.musaexhibition.com/') https://www.musaexhibition.com/
  br
  a.website(href='../info@musaexhibition.com') info@musaexhibition.com
